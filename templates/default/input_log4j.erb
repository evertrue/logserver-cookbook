# https://www.elastic.co/guide/en/logstash/current/plugins-inputs-log4j.html
input {
  log4j {
    add_field => {
      "x_input_processor" => "log4j"
    }
    data_timeout => <%= @log4j['data_timeout'] %>
    host => "<%= @log4j['host'] %>"
    port => <%= @log4j['port'] %>
    mode => "<%= @log4j['mode'] %>"
  }
}
